{% extends 'base.html.twig' %}

{% block body %}
        <div class="row justify-content-center mt-2">
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        Settings
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2 col-6 mx-auto">
                        <a href={{ path("app_config_status") }} class="btn btn-light" type="button">Configure issue statuses</a>
                        <a href={{ path("app_config_priority") }} class="btn btn-light" type="button">Configure issue priorities</a>
                        <a href={{ path("app_config_disableuser") }} class="btn btn-light" type="button">Disable user</a>
                        <a href={{ path("app_config_enableuser") }} class="btn btn-light" type="button">Enable user</a>
                        <a href={{ path("app_config_addadmin") }} class="btn btn-light" type="button">Add administrator</a>
                        <a href={{ path("app_config_removeadmin") }} class="btn btn-light" type="button">Remove administrator</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}